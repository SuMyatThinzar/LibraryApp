<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_medium_2">

    <com.padcmyanmar.smtz.library.views.components.RoundedCornerImageView
        android:id="@+id/ivEbook"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="fitXY"
        android:src="@mipmap/book"
        app:cornerRadius="@dimen/margin_medium" />

    <TextView
        android:id="@+id/tvEbookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivEbook"
        android:padding="@dimen/margin_small"
        android:maxLines="2"
        android:text="Lean UX: Designing Great Products with Agile Teams"
        android:textColor="@color/colorSecondaryText" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnMoreActionEbooks"
        android:layout_width="@dimen/margin_medium_5"
        android:layout_height="@dimen/margin_medium_4"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_more" />

</RelativeLayout>